<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="twolinetextview.keith.com.twolinetextview.MainActivity">


    <com.cd.keith.twolinetextview.TwoLineTextView
        android:id="@+id/tv_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:firstLineText="合作商家订单"
        app:firstLineTextSize="30sp"
        app:firstLineTextColor="#999999"
        app:secondLineTextColor="#89d284"
        app:secondLineTextSize="26sp"
        app:secondLineText="100单" />

    <com.cd.keith.twolinetextview.TwoLineTextView
        android:id="@+id/tv_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="15dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/tv_first"
        android:gravity="center"
        app:firstLineText="合作商家订单"
        app:firstLineTextSize="14sp"
        app:firstLineTextColor="#999999"
        app:lineSpaceHeight="14dp"
        app:secondLineTextColor="#89d284"
        app:secondLineTextSize="14sp"
        app:secondLineText="100单" />

    <com.cd.keith.twolinetextview.TwoLineTextView
        android:id="@+id/tv_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/tv_second"
        app:firstLineText="合作商家订单"
        app:firstLineTextSize="24sp"
        app:firstLineTextColor="#999999"
        app:secondLineTextColor="#89d284"
        app:secondLineTextSize="18sp"
        app:secondLineText="100单" />


    <com.cd.keith.twolinetextview.TwoLineTextView
        android:id="@+id/tv_four"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/tv_three"/>
</RelativeLayout>
